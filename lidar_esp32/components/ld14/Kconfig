menu "LD14 Configuration"

    orsource "$IDF_PATH/examples/common_components/env_caps/$IDF_TARGET/Kconfig.env_caps"
    
    config LD14_UART_NUM
        int "LD14 UART port number"
        range 0 2
        default 1
        help
            UART port number.

    config LD14_UART_BAUD_RATE
        int "LD14 UART communication speed"
        range 1200 115200
        default 115200
        help
            UART communication speed for the example.

    config LD14_UART_RXD
        int "LD14 UART RXD pin number"
        range ENV_GPIO_RANGE_MIN ENV_GPIO_IN_RANGE_MAX
        default 5
        help
            GPIO number for UART RX pin. See UART documentation for more information
            about available pin numbers for UART.

    config LD14_UART_TXD
        int "LD14 UART TXD pin number"
        range ENV_GPIO_RANGE_MIN ENV_GPIO_OUT_RANGE_MAX
        default 4
        help
            GPIO number for UART TX pin. See UART documentation for more information
            about available pin numbers for UART.

endmenu